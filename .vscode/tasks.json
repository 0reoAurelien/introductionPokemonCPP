{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build Main.cpp",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}/src/Main.cpp",
                "${workspaceFolder}/src/Pokemon.cpp",
                "${workspaceFolder}/src/Utility.cpp",
                "${workspaceFolder}/src/SetOfPokemon.cpp",
                "${workspaceFolder}/src/Pokedex.cpp",
                "${workspaceFolder}/src/Pokeball.cpp",
                "${workspaceFolder}/src/PokemonParty.cpp",
                "${workspaceFolder}/src/Item.cpp",
                "${workspaceFolder}/src/Inventory.cpp",
                "${workspaceFolder}/src/Player.cpp",
                "${workspaceFolder}/src/Game.cpp",
                "${workspaceFolder}/src/Soundboard.cpp",
                "-o",
                "${fileDirname}/Main",
                "-lasound" //to manage audiofiles and audio output
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}